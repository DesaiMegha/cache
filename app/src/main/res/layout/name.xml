<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".nav_fragment.ProfileFragment"
        android:background="@drawable/background3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="170dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/Text1"
            android:text="Denial Rozar"
            android:textSize="35dp"
            android:textColor="#1241E6"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Text"
            android:text="megha123@gmai.com"
            android:textSize="30dp"
            android:layout_below="@id/Text1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="80dp"
            android:textStyle="bold"
            android:textColor="#1241E6"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/movie"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />


        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image2"
            android:layout_below="@+id/Text"
            android:src="@drawable/school"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="School"
            android:textSize="28dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="230dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Text3"
            android:text="The Lawrenceville School"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="27dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image3"
            android:layout_below="@+id/image2"
            android:src="@drawable/person2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text4"
            android:text="Nick Name"
            android:textSize="28dp"
            android:layout_below="@+id/Text3"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="170dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Text5"
            android:text="r.denial"
            android:layout_below="@id/text4"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="28dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image4"
            android:layout_below="@+id/image3"
            android:src="@drawable/contact_emergency"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text6"
            android:text="Emergency Contact"
            android:textSize="27dp"
            android:layout_below="@+id/Text5"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="80dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Text7"
            android:text="Jessica Curl"
            android:layout_below="@+id/text6"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="28dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image5"
            android:layout_below="@+id/image4"
            android:src="@drawable/phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text8"
            android:text="Contact Number"
            android:textSize="28dp"
            android:layout_below="@+id/Text7"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="100dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Text9"
            android:text="+1-987654321"
            android:layout_below="@+id/text8"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="28dp"/>

    </RelativeLayout>

</LinearLayout>